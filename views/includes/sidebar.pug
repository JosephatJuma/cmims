aside.main-sidebar.sidebar-dark-primary.elevation-4(style="position: fixed;top: 0;left: 0;height: 100%;width: 250px; transition: transform 0.3s ease-in-out; overflow-y: auto;")
    // Brand Logo
    a.brand-link(href='/')
      img.brand-image.img-circle.elevation-3(src='/dist/img/AdminLTELogo.png' alt='AdminLTE Logo' style='opacity: 0.8')
      span.brand-text.font-weight-light Techfier
    // Sidebar
    .sidebar
      // Sidebar user panel (optional)
      .user-panel.mt-3.pb-3.mb-3.d-flex
        a(href="/user/profile")
          .image
            img.img-circle.elevation-2(src='/dist/img/user2-160x160.jpg' alt='User Image')
        .info
          a.d-block(href='/user/profile') 
            if user
              p #{user.name}
      // SidebarSearch Form
      .form-inline
        .input-group(data-widget='sidebar-search')
          input.form-control.form-control-sidebar(type='search' placeholder='Search' aria-label='Search')
          .input-group-append
            button.btn.btn-sidebar
              i.fas.fa-search.fa-fw
      // Sidebar Menu
      nav.mt-2
        ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview' role='menu' data-accordion='false')
          li.nav-header Navigation
          li.nav-item
            a.nav-link(href='/' class= page=="Dashboard" ? "active":"")
              i.nav-icon.fas.fa-tachometer-alt
              p
                | Dashboard
          li.nav-item
            a.nav-link(href='pages/gallery.html')
              i.nav-icon.fas.fa-rocket
              p Spare parts
          li.nav-item
            a.nav-link(href='pages/kanban.html')
              i.nav-icon.fas.fa-calendar
              p Schedule
          li.nav-item
            a.nav-link(href='#' class= page=="Add Equipment"|| page=="All Equipment" || page=="Parts" ?  "active":"")
              i.nav-icon.fa.fa-wrench
              p
                | Equipment
                i.fas.fa-angle-left.right
            ul.nav.nav-treeview
              li.nav-item
                a.nav-link(href='/equipment/add' class= page=="Add Equipment" ? "active":"")
                  i.fas.fa-plus.nav-icon
                  p Add equipment
              li.nav-item
                a.nav-link(href='/equipment' class= page=="All Equipment" ? "active":"")
                  i.fa.fa-list.nav-icon
                  p All equipment
          li.nav-item
            a.nav-link(href='/users' class= page=="Users"|| page=="Add User" ?  "active":"")
              i.nav-icon.fas.fa-users
              p
                | Users
                i.fas.fa-angle-left.right
            ul.nav.nav-treeview
              li.nav-item
                a.nav-link(href='/user/add' class=  page=="Add User" ?  "active":"")
                  i.fas.fa-user-plus.nav-icon
                  p Register user
              li.nav-item
                a.nav-link(href='/user' class=  page=="Users" ?  "active":"")
                  i.fa.fa-list.nav-icon
                  p All users
          li.nav-item
            a.nav-link(href='#')
              i.fas.fa-question-circle.nav-icon
              p Help
          li.nav-item
            a.nav-link(href='/user/profile'  class=  page=="My Profile" ?  "active":"")
              i.fas.fa-user.nav-icon
              p My Profile
          li.nav-item
            a.nav-link(href='#')
              .btn.btn-success(data-toggle="modal" data-target="#alertLogout")
                i.nav-icon.fas.fa-right-from-bracket.text-info
                p Logout