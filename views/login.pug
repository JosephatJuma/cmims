doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Techfier | Log in
  // Google Font: Source Sans Pro
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback')
  // Font Awesome
  link(rel='stylesheet' href='../../plugins/fontawesome-free/css/all.min.css')
  // icheck bootstrap
  link(rel='stylesheet' href='../../plugins/icheck-bootstrap/icheck-bootstrap.min.css')
  // Theme style
  link(rel='stylesheet' href='../../dist/css/adminlte.min.css')
body

 .login-box
  .login-logo
    a(href='../../index2.html')
      b Tech
      | fier
  // /.login-logo
  .card
    .card-body.login-card-body
      p.login-box-msg Sign in to start your session
      form(action='../../index3.html' method='post')
        .input-group.mb-3
          input.form-control(type='email' placeholder='Email')
          .input-group-append
            .input-group-text
              span.fas.fa-envelope
        .input-group.mb-3
          input.form-control(type='password' placeholder='Password')
          .input-group-append
            .input-group-text
              span.fas.fa-lock
        .row
          .col-8
            .icheck-success
              input#remember(type='checkbox')
              label(for='remember')  Remember Me 
          // /.col
          .col-4
            button.btn.btn-success.btn-block(type='submit')
              | Sign In
          // /.col
      p.mb-1
        a(href='forgot-password.html') I forgot my password
      p.mb-0
        a.text-center(href='register.html') Register a new membership
    // /.login-card-body
// /.login-box
