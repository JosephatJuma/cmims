                            | quora plaxo ideeli hulu weebly balihoo...
                          .timeline-footer
                            a.btn.btn-primary.btn-sm(href='#') Read more
                            a.btn.btn-danger.btn-sm(href='#') Delete
                      div
                        i.fas.fa-user.bg-info
                        .timeline-item
                          span.time
                            i.far.fa-clock
                            |  5 mins ago
                          h3.timeline-header.border-0
                            a(href='#') Sarah Young
                            |  accepted your friend request
                      div
                        i.fas.fa-comments.bg-warning
                        .timeline-item
                          span.time
                            i.far.fa-clock
                            |  27 mins ago
                          h3.timeline-header
                            a(href='#') Jay White
                            |  commented on your post
                          .timeline-body
                            | Take me to your leader!
                            | Switzerland is small and neutral!
                            | We are more like Germany, ambitious and misunderstood!
                          .timeline-footer
                            a.btn.btn-warning.btn-flat.btn-sm(href='#') View comment
                      .time-label
                        span.bg-success
                          | 3 Jan. 2014
                      div
                        i.fas.fa-camera.bg-purple
                        .timeline-item
                          span.time
                            i.far.fa-clock
                            |  2 days ago
                          h3.timeline-header
                            a(href='#') Mina Lee
                            |  uploaded new photos
                          .timeline-body
                            img(src='https://placehold.it/150x100' alt='...')
                            img(src='https://placehold.it/150x100' alt='...')
                            img(src='https://placehold.it/150x100' alt='...')
                            img(src='https://placehold.it/150x100' alt='...')
                      div
                        i.far.fa-clock.bg-gray
                  // /.tab-pane
                  #settings.tab-pane
                    form.form-horizontal
                      .form-group.row
                        label.col-sm-2.col-form-label(for='inputName') Name
                        .col-sm-10
                          input#inputName.form-control(type='text' placeholder='Name' value=user.name name="name")
                      .form-group.row
                        label.col-sm-2.col-form-label(for='inputEmail') Email
                        .col-sm-10
                          input#inputEmail.form-control(type='email' placeholder='Email' value=user.email name="email")
                      .form-group.row
                        label.col-sm-2.col-form-label(for='inputName2') Role
                        .col-sm-10
                          input#inputName2.form-control(type='text' placeholder='User Role' name="user_role" value=user.user_role readonly)
                      .form-group.row
                        label.col-sm-2.col-form-label(for='inputExperience') About
                        .col-sm-10
                          textarea#inputExperience.form-control(placeholder='About' name="about" value=user.about maxlength="100")
                      .form-group.row
                        label.col-sm-2.col-form-label(for='inputSkills') Phone Number
                        .col-sm-10
                          input#inputSkills.form-control(type='text' placeholder='Phone number' value=user.phone_number name="phone_number")
                      .form-group.row
                        .offset-sm-2.col-sm-10
                          .checkbox
                            label
                              input(type='checkbox')
                              |  I confirm that this information is correct
                      .form-group.row
                        .offset-sm-2.col-sm-10
                          button.btn.btn-danger(type='submit') Update
    #rightModal.modal.fade.right(tabindex='-1' role='dialog' aria-labelledby='rightModalLabel' aria-hidden='true')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5#rightModalLabel.modal-title Update Profile Image
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            form(action="/user/update/image" method="post" )
              input#image(type="file", name="image")
              .modal-footer
                button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                button.btn.btn-primary(type='submit') Save changes

    include ./includes/components/alert-logout.pug
  include ./includes/footer.pug
include ./includes/scripts.pug
